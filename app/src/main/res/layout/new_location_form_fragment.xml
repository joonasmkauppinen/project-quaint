<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.location.NewLocationForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:background="@drawable/list_item_background_bottom_stroke">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_name_tag"
            android:tint="@color/colorFormFieldIcon"
            android:contentDescription="@string/content_description_name_tag_icon"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/screen_margin"
            android:inputType="textCapSentences|textMultiLine"
            android:textSize="19sp"
            android:hint="@string/input_hint_name"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorInputHint"
            android:fontFamily="@font/pier_sans_regular"
            android:background="@drawable/input_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addressListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:background="@drawable/list_item_background_bottom_stroke"
        android:clickable="true"
        android:focusable="true"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_location_pin"
            android:tint="@color/colorFormFieldIcon"
            android:contentDescription="@string/content_description_location_pin_icon"
            />
        <TextView
            android:id="@+id/newLocationAddressTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/input_hint_address"
            android:textSize="19sp"
            android:gravity="start|center"
            android:textColor="@color/colorInputHint"
            android:fontFamily="@font/pier_sans_regular"
            android:background="@drawable/input_background"/>
    </LinearLayout>

</LinearLayout>